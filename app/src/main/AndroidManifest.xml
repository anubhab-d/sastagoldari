<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.sastaGoldari">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SelectEditActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.vieworder"
            android:theme="@style/ViewOrderTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.deleteitem"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.edititem"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.additem"
                  android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Welcome"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.thankyou"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.address"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.reviewitems"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.logadmin"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.MainActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.splashscreen"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>